<ul class="lg:flex gap-8 items-center list-none hidden">
  <% unless current_user %>
    <%= link_to new_user_session_path do %>
      <li class="nav-link transition-all duration-1000 text-slate-900 font-thin hover:text-blue-500 text-xl">Log in</li>
    <% end %>
  <% end %>
  <%= link_to articles_path  do %>
    <li class="nav-link transition-all duration-1000 flex items-center gap-2 text-slate-900 font-thin hover:text-blue-500 text-xl"><svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 512 512"><path fill="currentColor" d="M75 75L41 41C25.9 25.9 0 36.6 0 57.9V168c0 13.3 10.7 24 24 24H134.1c21.4 0 32.1-25.9 17-41l-30.8-30.8C155 85.5 203 64 256 64c106 0 192 86 192 192s-86 192-192 192c-40.8 0-78.6-12.7-109.7-34.4c-14.5-10.1-34.4-6.6-44.6 7.9s-6.6 34.4 7.9 44.6C151.2 495 201.7 512 256 512c141.4 0 256-114.6 256-256S397.4 0 256 0C185.3 0 121.3 28.7 75 75zm181 53c-13.3 0-24 10.7-24 24V256c0 6.4 2.5 12.5 7 17l72 72c9.4 9.4 24.6 9.4 33.9 0s9.4-24.6 0-33.9l-65-65V152c0-13.3-10.7-24-24-24z"/></svg>Recent Articles</li>
  <% end %>
  <% if current_user %>
    <%= link_to new_article_path do %>
      <li class="nav-link transition-all duration-1000 flex items-center gap-2 text-slate-900 font-thin hover:text-blue-500 text-xl"><svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 448 512"><path fill="currentColor" d="M256 80c0-17.7-14.3-32-32-32s-32 14.3-32 32V224H48c-17.7 0-32 14.3-32 32s14.3 32 32 32H192V432c0 17.7 14.3 32 32 32s32-14.3 32-32V288H400c17.7 0 32-14.3 32-32s-14.3-32-32-32H256V80z"/></svg>New Article</li>
    <% end %>
    <%= button_to destroy_user_session_path, method: :delete do %>
      <li class="nav-link transition-all duration-1000 flex items-center gap-2 text-slate-900 font-thin hover:text-red-300 text-xl"><svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 512 512"><path fill="currentColor" d="M288 32c0-17.7-14.3-32-32-32s-32 14.3-32 32V256c0 17.7 14.3 32 32 32s32-14.3 32-32V32zM143.5 120.6c13.6-11.3 15.4-31.5 4.1-45.1s-31.5-15.4-45.1-4.1C49.7 115.4 16 181.8 16 256c0 132.5 107.5 240 240 240s240-107.5 240-240c0-74.2-33.8-140.6-86.6-184.6c-13.6-11.3-33.8-9.4-45.1 4.1s-9.4 33.8 4.1 45.1c38.9 32.3 63.5 81 63.5 135.4c0 97.2-78.8 176-176 176s-176-78.8-176-176c0-54.4 24.7-103.1 63.5-135.4z"/></svg>Logout</li>
    <% end %>
    <%= link_to profile_path(current_user) do %>
      <li><%= image_tag current_user.picture.attached? ? current_user.picture : "user_placeholder", class: "w-16 object-cover rounded-full overflow-hidden #{controller_name == "profiles" && action_name == "show" ? "invisible" : ""}"  %></li>
    <% end %>
  <% end %>
</ul>
