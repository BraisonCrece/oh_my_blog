<h1 class="text-center"><%= @user.email %></h1>
<section>
  <%= form_with model: @user, url: profile_path(@user), method: :patch, html: {class: "flex flex-col items-center gap-2" }  do |form|  %>
    <label for="user_picture">
      <%= image_tag @user.picture.attached? ? @user.picture : "user_placeholder", class: "w-36 rounded-full overflow-hidden"  %>
    </label>
    <%= form.file_field :picture, class: "hidden"%>
    <%= form.submit "Submit", class: "px-5 bg-blue-200 rounded font-white" %>
  <% end %>
</section>
