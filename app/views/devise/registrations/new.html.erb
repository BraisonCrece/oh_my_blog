<div class="w-full md:w-1/2 lg:w-1/3 mx-auto bg-white p-8 mt-20 rounded shadow-md shadow-stone-400">
  <h2 class="text-2xl font-semibold mb-4 text-blue-500">Sign up</h2>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="space-y-2">
      <%= f.label :email, class: "text-blue-500" %><span class="text-blue-500">*</span>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border rounded" %>
    </div>

    <div class="space-y-2">
      <%= f.label :password, class: "text-blue-500" %><span class="text-blue-500">*</span>
      <% if @minimum_password_length %>
        <em class="text-sm text-blue-500">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 border rounded" %>
    </div>

    <div class="space-y-2">
      <%= f.label :password_confirmation, class: "text-blue-500" %><span class="text-blue-500">*</span>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 border rounded" %>
    </div>

    <div class="space-y-2 flex justify-between items-center">
      <%= f.submit "Sign up", class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 cursor-pointer" %>
      <span class="text-gray-500">* Mandatory fields</span>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
