<div class="md:w-3/4 mx-auto bg-white p-8 mt-20 rounded shadow-md shadow-stone-400">
  <div class="flex justify-between items-baseline">
    <h2 class="text-2xl font-semibold mb-4 text-blue-500">Forgot your password?</h2>
    <span class="text-gray-900 text-sm font-thin">* Mandatory fields</span>
  </div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-4" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="space-y-2">
      <%= f.label :email, class: "text-blue-500" %><span class="text-blue-500">*</span>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border rounded" %>
    </div>

    <div class="space-y-2">
      <%= f.submit "Send me reset password instructions", class: "w-full bg-blue-500 text-white text-lg font-medium px-8 py-1 mx-auto rounded hover:bg-blue-600 cursor-pointer" %>
    </div>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Sign up", new_registration_path(resource_name), class: "underline decoration-2 underline-offset-2 cursor-pointer" %><br />
  <% end %>
</div>