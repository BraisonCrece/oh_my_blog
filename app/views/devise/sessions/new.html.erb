<div class="md:w-3/4 mx-auto bg-white p-8 mt-20 rounded shadow-md shadow-stone-400">
  <div class="flex justify-between items-baseline">
    <h2 class="text-2xl font-semibold mb-4 text-blue-500">Log in</h2>
    <span class="text-gray-900 text-sm font-thin">* Mandatory fields</span>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
    <div class="space-y-2">
      <%= f.label :email, class: "text-blue-500" %><span class="text-blue-500">*</span><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border rounded" %>
    </div>
    <div class="space-y-2">
      <%= f.label :password, class: "text-blue-500" %><span class="text-blue-500">*</span><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-3 py-2 border rounded" %>
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-gray-500 hover:text-gray-800" %>
        <% end %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="flex items-center space-x-2">
        <%= f.check_box :remember_me, class: "form-checkbox text-primary-500 cursor-pointer" %>
        <%= f.label :remember_me, class: "text-gray-500 hover:text-gray-800 cursor-pointer" %>
      </div>        
    <% end %>
    <div class="space-y-2 flex justify-between items-center">
      <%= f.submit "Log in", class: "w-full bg-blue-500 text-white text-lg font-medium px-8 py-1 mx-auto rounded hover:bg-blue-600 cursor-pointer" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
